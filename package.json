{
    "name": "@ovchinnikov-lxs/nuxt3-template",
    "scripts": {
        "build": "nuxt build",
        "dev": "nuxt dev",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "postinstall": "nuxt prepare",
        "prepare": "husky install",
        "el:check": "eslint --ext .ts --ext .vue .",
        "sl:check": "stylelint \"**/*.{css,scss,vue}\"",
