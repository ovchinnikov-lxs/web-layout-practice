         "@nuxtjs/eslint-config-typescript": "^12.0.0",
        "@types/node": "^18.16.19",
        "eslint": "^8.34.0",
        "husky": "^8.0.3",
        "nano-staged": "^0.5.0",
        "nuxt": "^3.6.3",
        "sass": "^1.58.0",
        "stylelint": "^13.13.1",
        "stylelint-config-css-modules": "^2.2.0",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-order": "^4.1.0",
        "stylelint-scss": "^3.14.2",
